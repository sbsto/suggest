#!/usr/bin/env bash
set -euo pipefail

# List all available versions for the suggest tool
# Output: space-separated list of versions, newest version last

# Get all git tags and sort them by version
git ls-remote --tags --refs https://github.com/sbsto/suggest.git \
    | cut -d/ -f3 \
    | grep -E '^v[0-9]+\.[0-9]+\.[0-9]+$' \
    | sort -V \
    | tr '\n' ' ' \
    | sed 's/ $//'

echo